<Page
    x:Class="Architecture.Presentation.Views.Architecture.ArchitectureMainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MyToolkit.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Architecture.Presentation.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="using:Syncfusion.UI.Xaml.Grid"
    DataContext="{Binding ArchitectureMain, Source={StaticResource Locator}}"
    mc:Ignorable="d">


    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <TextBlock
            HorizontalAlignment="Center"
            FontFamily="Segoe WP Black"
            FontSize="30"
            FontWeight="Bold"
            Foreground="DarkBlue"
            Text="Сооружения" />

        <syncfusion:SfDataGrid
            x:Name="SyncDataGrid"
            Grid.Row="1"
            AllowFiltering="True"
            AutoGenerateColumns="False"
            ItemsSource="{Binding ArchitectureList}"
            SelectionMode="Multiple"
            ColumnSizer="Star">

            <syncfusion:SfDataGrid.Columns>
                <syncfusion:GridTextColumn MappingName="Title" />
                <syncfusion:GridTextColumn MappingName="Country" />
                <syncfusion:GridTextColumn MappingName="City" />
                <syncfusion:GridComboBoxColumn HeaderText="Состояние сооружения" MappingName="State" />
            </syncfusion:SfDataGrid.Columns>


        </syncfusion:SfDataGrid>

    </Grid>
</Page>
