<Page
    x:Class="Architecture.Presentation.Views.Architecture.ArchitectureMainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MyToolkit.Controls"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:Architecture.Presentation.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="using:Syncfusion.UI.Xaml.Grid"
    DataContext="{Binding ArchitectureMain, Source={StaticResource Locator}}"
    mc:Ignorable="d">

    <interactivity:Interaction.Behaviors>
        <core:EventTriggerBehavior EventName="Loaded">
            <core:EventTriggerBehavior.Actions>
                <core:InvokeCommandAction Command="{Binding PageLoadedCommand}" />
            </core:EventTriggerBehavior.Actions>
        </core:EventTriggerBehavior>
    </interactivity:Interaction.Behaviors>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="ms-appx:///Assets/Images/background.jpg" Stretch="Fill" />
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="8*" />
        </Grid.RowDefinitions>

        <Border Background="LightBlue" Opacity="1">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Segoe WP Black"
                FontSize="38"
                FontWeight="Bold"
                Foreground="DarkBlue"
                Text="Сооружения" />
        </Border>
        <Image
            Grid.Row="0"
            Grid.Column="0"
            Width="80"
            Margin="30,5"
            HorizontalAlignment="Left"
            Source="ms-appx:///Assets/Images/houseIcon.png" />

        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Padding="10"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <AppBarButton
                Margin="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Transparent"
                FontSize="25"
                Icon="Find" />
            <TextBox
                x:Name="SearchTextBox"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Background="White"
                FontSize="20"
                PlaceholderText="Название или адрес"
                TextChanged="TextBox_OnTextChanged" />
        </StackPanel>

        <Button
            Grid.Row="1"
            Grid.Column="0"
            Margin="20,0"
            HorizontalAlignment="Right"
            Background="White"
            Click="ButtonBase_OnClick"
            Content="Сбросить фильтры"
            FontSize="22" />

        <syncfusion:SfDataGrid
            x:Name="SfDataGrid"
            Grid.Row="2"
            Margin="10"
            AllowDeleting="False"
            AllowFiltering="True"
            AutoGenerateColumns="False"
            Background="White"
            ColumnSizer="Star"
            ItemsSource="{Binding ArchitectureList, Mode=TwoWay}"
            Opacity="0.85"
            RecordDeleting="SfDataGrid_OnRecordDeleting"
            SelectedItem="{Binding SelectedTableItem, Mode=TwoWay}"
            SelectionMode="Multiple">

            <syncfusion:SfDataGrid.RecordContextMenu>
                <MenuFlyout>
                    <MenuFlyout.Items>
                        <MenuFlyoutItem Click="EditRowMenuFlyoutItem_OnClick" Text="Редактировать сооружение" />
                        <MenuFlyoutItem Click="DeleteRowFlyoutItem_OnClick" Text="Удалить сооружение" />
                    </MenuFlyout.Items>
                </MenuFlyout>
            </syncfusion:SfDataGrid.RecordContextMenu>

            <syncfusion:SfDataGrid.Columns>
                <syncfusion:GridTextColumn
                    HeaderText="Название"
                    MappingName="Title"
                    MinimumWidth="130" />
                <syncfusion:GridTextColumn
                    HeaderText="Год создания"
                    MappingName="CreationYear"
                    MinimumWidth="120"
                    TextAlignment="Center" />
                <syncfusion:GridTextColumn
                    HeaderText="Страна"
                    MappingName="Country"
                    MinimumWidth="120" />
                <syncfusion:GridTextColumn
                    HeaderText="Город"
                    MappingName="City"
                    MinimumWidth="120" />
                <syncfusion:GridTextColumn
                    HeaderText="Адрес"
                    MappingName="Address"
                    MinimumWidth="190" />
                <syncfusion:GridTextColumn
                    HeaderText="Площадь"
                    MappingName="Square"
                    MinimumWidth="110"
                    TextAlignment="Center" />
                <syncfusion:GridTextColumn
                    HeaderText="Высота"
                    MappingName="Height"
                    MinimumWidth="100"
                    TextAlignment="Center" />
                <syncfusion:GridTextColumn
                    HeaderText="Архитектор"
                    MappingName="Architect.Surname"
                    MinimumWidth="140" />
                <syncfusion:GridTextColumn
                    HeaderText="Стиль"
                    MappingName="Style.Title"
                    MinimumWidth="140" />
                <syncfusion:GridComboBoxColumn HeaderText="Состояние" MappingName="State" />
            </syncfusion:SfDataGrid.Columns>

        </syncfusion:SfDataGrid>

    </Grid>
</Page>
