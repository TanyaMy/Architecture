<Page
    x:Class="Architecture.Presentation.Views.Architect.ArchitectAddPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Architecture.Presentation.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding ArchitectAdd, Source={StaticResource Locator}}"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*" />
            <ColumnDefinition Width="*" MinWidth="400" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.1*" />
            <RowDefinition Height="0.8*" />
            <RowDefinition Height="0.8*" />
            <RowDefinition Height="0.8*" />
            <RowDefinition Height="0.8*" />
            <RowDefinition Height="0.8*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <TextBlock
            x:Name="textBlock"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Margin="0,8,0,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontFamily="Segoe WP Black"
            FontSize="30"
            FontWeight="Bold"
            Foreground="DarkBlue"
            Opacity="1"
            Text="Архитекторы. Добавление" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="20,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            FontFamily="Segoe WP Black"
            FontSize="18"
            Foreground="Black"
            Opacity="1"
            Text="Имя" />
        <TextBox
            x:Name="nameTB"
            Grid.Row="1"
            Grid.Column="1"
            Width="300"
            Margin="20,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="14"
            Opacity="1" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="0,0,20,17"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            FontFamily="Segoe WP Black"
            FontSize="18"
            Foreground="Black"
            Opacity="1"
            Text="Фамилия" />
        <TextBox
            x:Name="surnameTB"
            Grid.Row="2"
            Grid.Column="1"
            Width="300"
            Margin="20,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="14"
            Opacity="1" />
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Margin="20,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            FontFamily="Segoe WP Black"
            FontSize="18"
            Foreground="Black"
            Opacity="1"
            Text="Национальность" />
        <TextBox
            x:Name="nationalityTB"
            Grid.Row="3"
            Grid.Column="1"
            Width="300"
            Margin="20,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="14"
            Opacity="1" />
        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Margin="20,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            FontFamily="Segoe WP Black"
            FontSize="18"
            Foreground="Black"
            Opacity="1"
            Text="Год рождения" />
        <DatePicker
            x:Name="birthDateDP"
            Grid.Row="4"
            Grid.Column="1"
            Width="300"
            Margin="20,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="14"
            Opacity="1" />
        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Margin="20,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            FontFamily="Segoe WP Black"
            FontSize="18"
            Foreground="Black"
            Opacity="1"
            Text="Год смерти" />
        <DatePicker
            x:Name="deathDateDP"
            Grid.Row="5"
            Grid.Column="1"
            Width="300"
            Margin="20,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="14"
            Opacity="1" />


        <Button
            x:Name="addBtn"
            Grid.Row="6"
            Grid.Column="2"
            Width="300"
            Margin="20,0"
            VerticalAlignment="Center"
            Background="LightBlue"
            BorderBrush="DarkBlue"
            Content="Добавить"
            FontSize="20" />

    </Grid>
</Page>
